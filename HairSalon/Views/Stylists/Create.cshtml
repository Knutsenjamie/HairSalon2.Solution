@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add A Stylist</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Details)
    @Html.TextBoxFor(model => model.Details)

    @Html.LabelFor(model => model.Client)
    @Html.DropDownList("ClientId")

    <input type="submit" value="Add Stylist" class="btn btn-default" />
}
<p>@Html.ActionLink("Show All Stylists", "Index")</p>